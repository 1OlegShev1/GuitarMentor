{
  "name": "guitar-mentor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3000",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p 3000",
    "lint": "next lint",
    "find-ip": "node scripts/find-local-ip.js",
    "dev:network": "node scripts/find-local-ip.js && next dev -H 0.0.0.0 -p 3000",
    "dev:https": "next dev -p 3000",
    "proxy:https": "local-ssl-proxy --source 3001 --target 3000",
    "dev:secure": "concurrently \"npm run dev:https\" \"npm run proxy:https\""
  },
  "dependencies": {
    "next": "^15.2.3",
    "next-themes": "^0.4.6",
    "pitchy": "^4.0.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "tonal": "^6.4.1",
    "tone": "^15.0.4"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.0.15",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.13.11",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "eslint-config-next": "^15.2.3",
    "local-ssl-proxy": "^2.0.5",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  }
}
